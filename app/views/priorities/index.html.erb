  <div class="container">
    <div class="margin-box">
       <% title = 'thank you!' %>
       <h2 class="text-center"><%= title.upcase! %></h2>
     </div>
    <div>
      <h3 class="text-center">Your margin has been covered with success.</h3>
    </div>
