  <div class="container" id="containinho">
    <div class="row" id="rowzinho">
      <div class="col-md-8 col-md-offset-2">
        <div id="items" class="list-group">
          <div class="list-group-item"  data-id="5">
            <div class="flex-group text-left">
              <span class="span-text">Private Bonds</span>
            </div>
            <%= image_tag "invoice.svg", class:"icons" %>
            <div class="amount">
              <span class="span-text">R$<%= current_user.asset_value("Private Bonds").to_i %></span>
            </div>
            </div>
              <div class="list-group-item" data-id="1">
              <div class="flex-group text-left">
              <span class="span-text">Cash</span>
              </div>
              <%= image_tag "money.svg", class:"icons text-center" %>
              <div class="amount">
              <span class="span-text">R$<%= current_user.asset_value("Cash").to_i %></span>
            </div>
          </div>
            <div class="list-group-item" data-id="9">
            <div class="flex-group text-left">
              <span class="span-text">Gold</span>
            </div>
              <%= image_tag "gold-ingot.svg", class:"icons" %>
          <div class="amount">
            <span class="span-text">R$<%= current_user.asset_value("Gold").to_i %></span>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="col-md-4 col-md-offset-4">
