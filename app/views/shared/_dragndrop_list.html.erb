          <div class="amount">
            <span class="span-text">R$<%= current_user.asset_value("Investment Funds").to_i %></span>
          </div>
        </div>

        <div class="list-group-item" data-id="8">
          <div class="flex-group text-left">
            <span class="my-handle" aria-hidden="true">☰</span>
