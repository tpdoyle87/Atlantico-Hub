<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div id="items" class="list-group">

        <div class="list-group-item" data-id="1">
          <div class="flex-group text-left">
            <span class="my-handle" aria-hidden="true">☰</span>
            <span class="span-text">Cash</span>
          </div>
          <%= image_tag "money.svg", class:"icons text-center" %>
          <div class="amount">
            <span class="span-text">R$<%= current_user.asset_value("Cash").to_i %></span>
          </div>
        </div>

        <div class="list-group-item" data-id="2">
          <div class="flex-group text-left">
            <span class="my-handle" aria-hidden="true">☰</span>
            <span class="span-text">Federal Bonds</span>
          </div>
          <%= image_tag "safebox.svg", class:"icons" %>
          <div class="amount">
            <span class="span-text">R$<%= current_user.asset_value("Federal Bonds").to_i %></span>
          </div>
        </div>

        <div class="list-group-item"  data-id="3">
