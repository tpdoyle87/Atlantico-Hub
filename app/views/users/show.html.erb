<% content_for :meta_title, "Reorder your assets" %>
<div class="container">
  <div class="margin-box">
     <% title = 'Margin Call' %>
     <h2 class="text-center"><%= title.upcase! %></h2>
   </div>
  <div class="row">
    <div class ="col-md-6 col-md-offset-3 money-info">
      <div class="margin-call-box">
        <span><p>Margin Requirement</p></span>
        <span><p><%= current_user.margin_call.requirement.format %></p></span>      </div>
      <div class="margin-call-box">
        <span><p>Guarantees Deposited</p></span>
        <span><p><%= current_user.margin_call.guarantee.format %></p></span>
      </div>
      <div class="margin-call-box">
        <span><h3>Margin Call</h3></span>
        <span><h3><%= (current_user.margin_call.requirement - current_user.margin_call.guarantee).format %></h3></span>
      </div>
    </div>
  </div>
</div>

<%= render "/shared/dragndrop_list" %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
       <button class="btn btn-primary btn-block btn-save" data-toggle="modal" data-target="#modal-1">Save</button>
    </div>
  </div>
  <div id="save_modal">
    <%= render "/shared/save_modal" %>
  </div>
</div>
