<div class="container">
  <div class="margin-box">
     <% title = 'Margin Call' %>
     <h2 class="text-center"><%= title.upcase! %></h2>
   </div>
  <div class="row">
    <div class ="col-md-6 col-md-offset-3 money-info">
      <div class="margin-call-box">
        <span><p>Margin Requirement</p></span>
        <span><p><%= humanized_money_with_symbol(current_user.margin_call.requirement) %></p></span>      </div>
      <div class="margin-call-box">
        <span><p>Guarantees Deposited</p></span>
        <span><p><%= humanized_money_with_symbol(current_user.margin_call.guarantee) %></p></span>
      </div>
      <div class="margin-call-box">
        <span><h3>Margin Call</h3></span>
        <span><h3><%= humanized_money_with_symbol(current_user.margin_call.call) %></h3></span>
      </div>
    </div>
  </div>
</div>

<%= render "/shared/dragndrop_list" %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
       <button class="btn btn-primary btn-block btn-save" data-toggle="modal" data-target="#modal-1">Save</button>
       <%= link_to 'Save', '/categories/using',  data: { toggle: "modal", target: "#modal-1"},class: "btn btn-primary btn-block btn-save",id: 'modal-load', remote: true %>
    </div>
  </div>
  <div id="save_modal">
    <%= render "/shared/save_modal" %>
  </div>

</div>
