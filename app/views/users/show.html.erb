<div class="container">
  <div class="margin-box">
     <% title = 'Margin Call' %>
     <h2 class="text-center"><%= title.upcase! %></h2>
   </div>
  <div class="row">
    <div class ="col-md-4 col-md-offset-4 money-info">
      <div class="margin-call-box">
        <span><p>Margin Requirement</p></span>
        <span><p><%= current_user.margin_call %></p></span>
      </div>
      <div class="margin-call-box">
        <span><p>Guarantees Deposited</p></span>
        <span><p>R$7,400</p></span>
      </div>
      <div class="margin-call-box">
        <span><h3>Margin Call</h3></span>
        <span><h3>R$2,600</h3></span>
      </div>
    </div>
  </div>
</div>

<%= render "/shared/dragndrop_list" %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
       <button type="button" class="btn btn-primary btn-block btn-save" data-toggle="modal" data-target="#modal-1">Save</button>
    </div>
  </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
        <div class="modal fade" id="modal-1">
          <div class="modal-dialogue">
            <div class="modal-content">
             <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <!-- <h3 class="modal-title">Page header YAY</h3> -->
                <div class="margin-box">
                  <% title = 'Your preferences' %>
                  <h2 class="text-center"><%= title.upcase! %></h2>
                </div>
                <div class="margin-box-call">
                  <h4>This is how we are going to arrange your assets to cover the margin call:</h4>
                </div>
             </div>
             <div class="modal-body">
              <div class="list-group-item" data-id="1">
                <div class="flex-group text-left">
                  <span aria-hidden="true">  </span>
                  <span class="span-text">Cash</span>
                </div>
                  <%= image_tag "money.svg", class:"icons text-center" %>
                <div class="amount">
                  <span class="span-text">R$<%= current_user.asset_value("Cash").to_i %></span>
                </div>
              </div>
              <div class="list-group-item" data-id="9">
                <div class="flex-group text-left">
                  <span aria-hidden="true">  </span>
                  <span class="span-text">Gold</span>
                </div>
                  <%= image_tag "gold-ingot.svg", class:"icons" %>
                <div class="amount">
                  <span class="span-text">R$<%= current_user.asset_value("Gold").to_i %></span>
                </div>
              </div>
              <div class="list-group-item"  data-id="5">
                <div class="flex-group text-left">
                  <span aria-hidden="true">  </span>
                  <span class="span-text">Private Bonds</span>
                </div>
                <%= image_tag "invoice.svg", class:"icons" %>
                <div class="amount">
                  <span class="span-text">R$<%= current_user.asset_value("Private Bonds").to_i %></span>
                </div>
              </div>
             </div>
             <div class="modal-footer">
               <a href="" class="btn btn-default" data-dismiss="modal">Close</a>
               <%= link_to 'Save', user_priorities_path(current_user), class: 'btn btn-primary' %>
             </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
